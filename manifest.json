{
  "manifest_version": 3,
  "name": "Dialog AI",
  "version": "0.1.0",
  "description": "Chat with Chrome AI on any website.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.tsx"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Dialog AI"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}