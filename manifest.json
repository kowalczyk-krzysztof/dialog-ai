{
  "manifest_version": 3,
  "name": "Popover AI",
  "version": "0.1.0",
  "description": "Highlight text and chat with Chrome AI.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.tsx"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Popover AI"
  },
  "permissions": [
    "activeTab"
  ]
}