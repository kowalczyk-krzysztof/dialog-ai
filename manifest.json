{
  "manifest_version": 3,
  "name": "Dialog AI",
  "version": "0.1.0",
  "description": "Chat with Chrome AI on any website.",
  "icons": {
    "16": "icon16x16.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.tsx"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_title": "Open Dialog AI"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}